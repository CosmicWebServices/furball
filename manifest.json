{
  "manifest_version": 2,
  "name": "Furball",
  "description": "Adds tons of good features to Scratch by the LLK Group at MIT.",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["https://scratch.mit.edu/*"],
    "js": ["injected.js"],
    "css": ["injected.css"]
  }],
  "icons": {"128": "icon128x128.png"},
  "web_accessible_resources": [
    "MaterialIcons-Regular.woff2"
  ],
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Furball"
  }
}
